{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "@types/jquery"],
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./module",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@league-of-foundry-developers/foundry-vtt-types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}